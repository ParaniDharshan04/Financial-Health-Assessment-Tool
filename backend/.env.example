# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM API Key (Choose one)
# Option 1: Google Gemini (Current)
GEMINI_API_KEY=your-gemini-api-key-here

# Option 2: OpenAI (Alternative)
# OPENAI_API_KEY=your-openai-api-key-here

# Option 3: Claude (Alternative)
# ANTHROPIC_API_KEY=your-claude-api-key-here

# Environment
ENVIRONMENT=development

# Plaid Banking API (Optional - uses demo mode if not configured)
# Get credentials from: https://dashboard.plaid.com/
PLAID_CLIENT_ID=your-plaid-client-id-here
PLAID_SECRET=your-plaid-sandbox-secret-here
PLAID_ENV=https://sandbox.plaid.com

# Optional: Second Banking/Payment API
# RAZORPAY_KEY_ID=your-razorpay-key-id
# RAZORPAY_KEY_SECRET=your-razorpay-secret

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
